<div class='form-group'>
  <label for='title'>Title</label>
  <input class='form-control' type='text' id='title' name='title' <% if (locals.post) { %>value='<%= post.title %>'<% } %>>
</div>
<div class='form-group'>
  <label for='published_on'>Published Date</label>
  <input class='form-control' type='date' id='published_on' name='published_on' <% if (locals.post && post.published_on) { %>value='<%= moment(post.published_on).format('YYYY-MM-DD') %>'<% } %>>
</div>
<div class='form-group'>
  <label for='body'>Body</label>
  <textarea rows='15' class='form-control' type='text' id='body' name='body'><% if (locals.post) { %><%= post.body %><% } %></textarea>
</div>
<button type='submit' class='btn btn-default'>Save</button>
