<main class='container'>
  <form method='POST' action='/auth/signup' enctype='multipart/form-data'>
    <div class='panel panel-default panel-small'>
      <div class='panel-heading'>
        <h3 class='panel-title'>Sign Up</h3>
      </div>
      <div class='panel-body'>
        <div class='form-group'>
          <div class='row'>
            <div class='col-md-6'>
              <label for='first'>First Name</label>
              <input type='text' id='first' name='first' class='form-control' <% if (locals.first) { %>value='<%= locals.first%>'<% } %> autofocus required>
            </div>
            <div class='col-md-6'>
              <label for='last'>Last Name</label>
              <input type='text' id='last' name='last' class='form-control' <% if (locals.last) { %>value='<%= locals.last%>'<% } %> required>
            </div>
          </div>
        </div>
        <div class='form-group'>
          <label for='email'>Email</label>
          <input type='text' id='email' name='email' class='form-control' placeholder='you@example.com' <% if (locals.email) { %>value='<%= locals.email%>'<% } %> required>
        </div>
        <div class='form-group'>
          <label for='password'>Password</label>
          <input type='password' id='password' name='password' class='form-control' required>
        </div>
        <% if (locals.error) { %>
          <div class='alert alert-danger'>
            <%= locals.error %>
          </div>
        <% } %>
      </div>
      <div class='panel-footer text-right'>
        <button type='submit' class='btn btn-primary'>
          Sign Up
        </button>
      </div>
    </div>
  </form>
</main>
