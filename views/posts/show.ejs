<section class='container'>
  <article>
    <h1>
      <a href='/posts/<%= post.id %>'><%= post.title %></a>
    </h1>
    <small class='text-muted'>
      <date><%= moment(post.published_on).format('ll') %></date> by <%= post.user.name %>
    </small>
    <%- marked(post.body) %>
  </article>
</section>
